{
  "compilerOptions": {
    // Emit output
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "noEmit": false,

    // Module system for published output
    "module": "ESNext",
    "target": "ES2020",

    // Runtime compatibility (Node + bundlers)
    "moduleResolution": "node",

    // Allow bare TS imports
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,

    // Typical library-level strictness
    "strict": true,
    "skipLibCheck": true,

    // JS interop
    "allowJs": false,

    // Good optional stricter flags
    "noUncheckedIndexedAccess": true
  },

  // Make TypeScript aware of your code
  "include": ["src"]
}
